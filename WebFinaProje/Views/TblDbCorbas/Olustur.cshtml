@model services.ModelsS.TblDbCorba
@{

    Layout = "_Layout2";
}
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Rendering

<!DOCTYPE html>
<html>
<head>

    <link href="~/css/Ekle.css" rel="stylesheet" />
</head>
<body>
   
    <div class="row">
        <div class="col-md-4">
            <form action="/TblDbCorbas/kayital" method="post" enctype="multipart/form-data">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label class="control-label" for="CorbaAd">CorbaAd:</label>
                    <input class="form-control" type="text" id="CorbaAd" name="CorbaAd" required />
                    <span class="text-danger" asp-validation-for="CorbaAd"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="CorbaFiyat">CorbaFiyat:</label>
                    <input class="form-control" type="number" id="CorbaFiyat" name="CorbaFiyat" required />
                    <span class="text-danger" asp-validation-for="CorbaFiyat"></span>
                </div>
                
                <div class="form-group">
                    <label for="file">Resim Dosyası:</label>
                    <input type="file" id="file" name="file" class="form-control-file" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Olustur"  />
                </div>
            </form>
        </div>
    </div>

   
</body>
</html>

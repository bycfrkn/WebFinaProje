@model services.ModelsS.TblDbCorba
@{
   

    Layout = "_Layout2";
}

<link href="~/css/Ekle.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="GuncelleYap" asp-controller="TblDbCorbas" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CorbaAd" class="control-label"> </label>
                <input asp-for="CorbaAd" class="form-control"  />
                <span asp-validation-for="CorbaAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorbaFiyat" class="control-label"></label>
                <input asp-for="CorbaFiyat" class="form-control" />
                <span asp-validation-for="CorbaFiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorbaResim" class="control-label"></label>
                <input asp-for="CorbaResim" class="form-control" />
                <span asp-validation-for="CorbaResim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="file">Resim Dosyası:</label>
                <input type="file" id="file" name="file" class="form-control-file" />
            </div>

            <div class="form-group">
                <input type="submit" value="Guncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


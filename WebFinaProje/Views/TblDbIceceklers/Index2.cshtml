@model IEnumerable<services.ModelsS.TblDbIcecekler>

@{

    Layout = "_Layout2";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/indexler2.css" rel="stylesheet" />
    <title>Icecek</title>
</head>
<body>
    <div align="center" style="height:50px;color:brown"> Icecekler</div>
    <table style="width:100%">
        <tr>

            <th>Icecek AD</th>
            <th>Icecek Fiyat</th>
            <th>Icecek Resim</th>
            <th>SIL</th>
            <th>Guncelle</th>

        </tr>
        <tbody>
            @foreach (var crb in Model)
            {
                <tr>


                    <td>@crb.IcecekAd</td>
                    <td>@crb.IcecekFiyat</td>
                    <td> <img style="width:100px;height:100px" src="@crb.IcecekResim" /> </td>
                    <td><a href="/TblDbIceceklers/SIL/@crb.IcecekId" class="button button-red">Sil</a></td>
                    <td><a href="/TblDbIceceklers/Guncelle/@crb.IcecekId" class="button button-blue">Guncelle</a></td>
                </tr>

            }

        </tbody>

    </table>
    <div class="button-container">
        <button onclick="window.location.href='/TblDbIceceklers/Olustur'" class="button button-custom">Olustur</button>
    </div>


</body>
</html>

